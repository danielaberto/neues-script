<div class="wide content">
  <section class="contact-column">
    <h2>Contact us</h2>
    <p>
      {{ footer.contact }}
    </p>
  </section>
  <section class=" privacy">
    <h2>Neues Script Website</h2>
    {{ footer.privacy | markdownify | safe }}
  </section>

  <section>
    <h2>Connect</h2>

    <ul class="social-media-links">
      {% for link in footer.social %}
        <li><a href="{{ link.href }}">{{ link.linkName }}</a></li>
      {% endfor %}
    </ul>
  </section>
</div>


{% set css %}
  {% include "components/footer.css" %}
{% endset %}
<style>
  {{ css | cssmin | safe }}
</style>
