---
layout: layouts/home.njk
tags:
  - nav
navtitle: Home
---

<div class="home">

  <section class="home-intro narrow">
    <h2>{{home.headerTitle}}</h2>
    <p>
      {{home.headerDescription}}
    </p>
  </section>

  <section class="home-cta xnarrow">
    <div class="left">
      <h2>Learn more about us</h2>
      <ul>
        <li><a href="/services">Our services</a></li>
        <li><a href="/projects">Past projects</a></li>
        <li><a href="/about">What we do</a></li>
      </ul>
    </div>
    <div class="right">
      <img src={{home.headerImage.url}} alt={{home.headerImage.alt}} />
    </div>
  </section>

  <p class="arrow">â†“</p>

  <section class="home-projects wide">
    <h2 class="narrow">{{home.projectsTitle}}</h2>
    <div class="home-projects-overview wide">
      {% set postslist = collections.myPosts %}
      {% for post in postslist | reverse %}
        {% set currentPost = post.data.post %}
        <div class="home-project">
          <h3>{{currentPost.title}}</h3>
          <p>{{currentPost.excerpt}}</p>
          <p><a href="{{ post.url | url }}" class="read-more">Read more</a></p>
        </div>
      {% endfor %}
    </div>
  </section>

   <section class="home-about home-cta narrow">
    <div class="left">
      <h2>{{home.aboutTitle}}</h2>
      <p>{{home.aboutDescription}}</p>
    </div>
    <div class="right">
      <img src={{home.headerImage.url}} alt={{home.headerImage.alt}} />
    </div>
  </section>

  <section class="home-services narrow">
    <h2>{{home.servicesTitle}}</h2>
    <p class="services-general">{{home.servicesDescription}}</p>
    <div>
      <div>
        <h3>{{home.servicesTitleBlock1Title}}</h3>
        <p>{{home.servicesTitleBlock1Descr}}</p>
      </div>
      <div>
        <h3>{{home.servicesTitleBlock2Title}}</h3>
        <p>{{home.servicesTitleBlock2Descr}}</p>
      </div>
      <div>
        <h3>{{home.servicesTitleBlock3Title}}</h3>
        <p>{{home.servicesTitleBlock3Descr}}</p>
      </div>
    </div>
    <p class="services-cta"><a href="/services">Learn more about our services</a></p>
  </section>

  {# <section class="home-journal wide">
    <h2>{{home.journalTitle}}</h2>
  </section> #}
  <section class="home-projects wide">
    <h2 class="narrow">{{home.journalTitle}}</h2>
    <div class="home-projects-overview wide">
      {% set postslist = collections.myPosts %}
      {% for post in postslist | reverse %}
        {% set currentPost = post.data.post %}
        <div class="home-project">
          <h3>{{currentPost.title}}</h3>
          <p>{{currentPost.excerpt}}</p>
          <p><a href="{{ post.url | url }}" class="read-more">Read more</a></p>
        </div>
      {% endfor %}
    </div>
  </section>
</div>
